<!--Content Heading-->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!--Message Block-->
<%- messages() %>

<!--Login Display-->
<form action="/account/register" method="post">
    <fieldset>
        <label>Fisrt Name:</label>
        <input name="account_firstname" type="text" required>
        <label>Last Name:</label>
        <input name="account_lastname"  type="text" required>
        <label>Email:</label>
        <input name="account_email" type="email" placeholder="sample@example.com" required>
        <label>Password:</label>
        <input name="account_password" type="text" minlength="12" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
        <div class="registerButton">
        <input type="submit" value="Register">
        </div>
    </fieldset>
</form>